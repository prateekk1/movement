<h1>Create New Product</h1>
<%= form_for :create_product, @create_product, :url => { :action => "create"}, :html => { :multipart => true } do |f| %>
  <div class="field">
     <%= f.file_field :avatar %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 6 %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :desired_price %><br />
    <%= f.text_field :desired_price %>
     <%=f.hidden_field :user_id,{:value => @movement.user_id} %>
     <%=f.hidden_field :movement_id,{:value => @movement.id} %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
